{
  "name": "nest-typescript-starter",
  "version": "1.0.0",
  "description": "Nest TypeScript starter repository",
  "license": "MIT",
  "scripts": {
    "vercel-build": "cp-cli prisma/schema-vercel.prisma prisma/schema.prisma && npm run prisma:sync && npm run prisma:generate && nest build && cp-cli dist out",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "npm run prisma:migrate:up && npm run prisma:generate && nest start",
    "start:watch": "npm run prisma:migrate:up && npm run prisma:generate && npm run start:dev",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint '{src,apps,libs,test}/**/*.ts' --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "echo 'No e2e tests implemented yet.'",
    "prisma": "prisma",
    "prisma:db:create": "npm run prisma -- migrate dev",
    "prisma:migrate:up": "npm run prisma -- migrate deploy",
    "prisma:sync": "npm run prisma -- db push --accept-data-loss",
    "prisma:generate": "npm run prisma -- generate",
    "prisma:watch": "npm run prisma -- generate -- --watch",
    "prisma:silent-watch": "npm run prisma -- generate -- --watch &",
    "prepare": "husky"
  },
  "dependencies": {
    "@nestjs/apollo": "12.2.0",
    "@nestjs/common": "10.3.10",
    "@nestjs/core": "10.3.10",
    "@nestjs/graphql": "13.0.0",
    "@nestjs/platform-express": "10.3.10",
    "@prisma/client": "~5.18.0",
    "@prisma/sdk": "~4.0.0",
    "apollo-server-express": "3.13.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.1",
    "graphql": "16.8.1",
    "graphql-fields": "^2.0.3",
    "graphql-subscriptions": "2.0.0",
    "graphql-type-json": "^0.3.2",
    "reflect-metadata": "0.1.13",
    "rxjs": "7.1.0",
    "save-dev": "^0.0.1-security",
    "type-graphql": "^2.0.0-rc.2"
  },
  "devDependencies": {
    "husky": "9.1.7",
    "cp-cli": "2.0.0",
    "rimraf": "6.0.1",
    "@nestjs/cli": "10.4.2",
    "@nestjs/schematics": "10.1.3",
    "@nestjs/testing": "10.3.10",
    "@prisma/generator-helper": "~5.18.0",
    "@types/express": "4.17.12",
    "@types/graphql-fields": "^1.3.3",
    "@types/node": "15.6.1",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "4.25.0",
    "@typescript-eslint/parser": "4.25.0",
    "dataloader": "^2.0.0",
    "eslint": "7.27.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-import": "2.23.3",
    "graphql-scalars": "^1.9.3",
    "jest": "29.7.0",
    "prettier": "2.3.0",
    "prisma": "~5.18.0",
    "supertest": "6.1.3",
    "ts-jest": "29.2.4",
    "ts-loader": "9.2.2",
    "ts-node": "10.0.0",
    "tsconfig-paths": "3.9.0",
    "typegraphql-prisma-nestjs": "0.2800.15",
    "typescript": "~5.5.4"
  }
}